<%= semantic_form_for @event do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :start_datetime, :as => :string, :input_html => {:value => l(@event.start_datetime, :format => :short), :class => "input-datetime", :type => :datetime} %>
    <%= f.input :end_datetime, :as => :string, :input_html => {:value => l(@event.end_datetime, :format => :short), :class => "input-datetime", :type => :datetime} %>
    <%= f.input :place %>
    <%= f.input :event_type %>
    <%= f.input :link %>
    <%= f.input :responsible_person, :collection => Profile.sorted_members %>
    <%= f.input :default_hours_of_work %>
    <%= f.input :group, :as => :select, :collection => group_names, :include_blank => false %>
  <% end %>
  <%= f.actions %>
<% end %>

