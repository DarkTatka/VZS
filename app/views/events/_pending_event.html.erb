<div class="media well well-small well-white">
  <div class="media-body">
    <div class="pull-right">
      <% if current_user %>
        <% if can? :edit, event %>
          <%= link_to edit_event_path(event) do %>
            Upravit
          <% end %>
          |
        <% end %>
        <span id="participation_box">
          <% if current_user.participates?(event) %>
            <%= render "participates" %>
          <%else %>
            <%= render "participation_buttons", :event => event %>
          <% end %>
        </span>
    <% end %>
    </div>
    <h4 class="media-heading">
      <%= l event.start_datetime.to_date, :format => :with_day %>
      <%= link_to_unless event.link.blank?, event.name, event.link %>
      <small>(<%= event.event_type %>)</small>
    </h4>
    <div class="row">
      <div class="span3">
        <div class="row">
          <div class="span3">
            <% unless event.start_datetime.hour == 0 and event.start_datetime.min == 0 %>
              <strong>
                <%= l event.start_datetime, :format => :just_time %> 
                <% if event.end_datetime %>
                  - <%= l event.end_datetime, :format => :just_time %>
                <% end %>
              </strong>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="span3">
            <%= event.place %>
          </div>
        </div>
        <div class="row">
          <div class="span3">
            <% if current_user %>
            <ol>
              <% event.participants.each do |participant| %>
                <li>
                <%= participant.full_name %> 
                <% if can? :unparticipate, Event %>
                  <%= link_to '#' do %>
                    <%= glyph :remove %>
                  <% end %> 
                <% end %>
                </li>
              <% end %>
            </ol>
          <% end %>
          </div>
        </div>
      </div>
      <div class="span5">
        <%= event.description_html %>
      </div>
    </div>
  </div>
</div>
