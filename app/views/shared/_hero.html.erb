<% if article %>
  <h1><%=link_to article.title, article %></h1>
  <p>
    <% unless article.galleries.blank? %>
      <% gallery = article.galleries.first %>
      <% if gallery.try(:photos).try(:many?) %>
        <%= link_to article do %>
          <%= image_tag gallery.photos.first.image.url(:thumbnail), :class => "float right" %>
        <% end %>
      <% end %>
    <% end %>
    <%= sanitize article.content.truncate(300), :tags => '' %>
    <br />
    <a href="<%= article_path(article) %>" class="btn btn-primary btn-medium">VÃ­ce <i class="icon-chevron-right"></i></a>
  </p>
<% end %>
