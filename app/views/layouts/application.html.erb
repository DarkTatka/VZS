<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
	<!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
	<!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
		<h1><%= link_to 'Vodní záchranná služba Českého červeného kříže - Místní skupina Třebíč', root_path %></h1>
		<div id="user_nav">
			<% if current_user %>
                Uživatel: <%= link_to current_user.login, edit_user_path(current_user), :title => 'Upravit profil' %>
				(<%= link_to "odhlásit", logout_path %>)
			<% else %>
				<%= link_to "Přihlásit", login_path %> /
				<%= link_to "Registrovat", register_path %>
			<% end %>
		</div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
