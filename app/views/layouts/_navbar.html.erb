<ul class="nav">
  <% pages_for_navbar.each do |page| %>
    <li><%= page_link page %></li>
  <% end %>
</ul>

<ul class="nav pull-right">
  <% if current_user %>
    <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        <%= current_user.full_name %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to t('btn.edit_profile'), edit_user_path(current_user) %></li>
        <li><%= link_to t('btn.logout'), logout_path %></li>
      </ul>
    </li>

  <% else %>
    <li><%= link_to t('btn.login'), login_path %></li>
    <li><%= link_to t('btn.register'), register_path %></li>
  <% end %>
</ul> <!--/.nav pullright -->

