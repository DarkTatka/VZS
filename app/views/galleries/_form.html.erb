<%= semantic_form_for @gallery do |f| %>
	<%= f.semantic_errors %>
    <%= f.inputs do %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :user %>
      <%= f.input :article, :as => :select, :include_blank => true, :collection => Article.order("created_at desc") %>
      <%= f.input :group, :as => :select, :collection => group_names, :include_blank => false %>
      <%= f.file_field 'gallery_photos_image', :multiple => "multiple", :name => "gallery[photos_attributes][][image]" %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button, :button_html => { :class => 'btn btn-success' } %>
    <% end %>
<% end %>
