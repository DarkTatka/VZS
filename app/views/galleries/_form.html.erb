<%= semantic_form_for @gallery do |f| %>
	<%= f.semantic_errors %>
    <%= f.inputs do %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :user %>
      <%= f.input :article, :as => :select, :include_blank => true %>
      <%= f.input :group, :as => :select, :collection => group_names, :include_blank => false %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button, :button_html => { :class => 'btn btn-success' } %>
    <% end %>
<% end %>
