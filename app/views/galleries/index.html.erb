<%= title "Fotogalerie" %>
<% context_menu do %>
  <% if can? :create, Gallery %>
    <%= link_new new_gallery_path, t('label.gallery.new') %>
  <% end %>
<% end %>


<% @galleries.each do |gallery| %>
  <div class="span8 well well-white">
    <div class="row">
      <div class="span1">
        <% unless gallery.photos.empty? %>
          <%= link_to gallery do %>
            <%= image_tag gallery.photos.first.image.url(:thumbnail), :size => "90x90" %>
          <% end %>
        <% end %>
      </div>
      <div class="span7">
        <div class="row">
          <div class="span7">
            <h2><%= link_to gallery.name, gallery%>
          </div>
        </div>
        <div class="row">
          <div class="span7">
            <small><%= gallery.description %></small></h2>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= will_paginate @galleries %>
