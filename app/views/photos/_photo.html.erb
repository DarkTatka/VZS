<% if photo_counter % 4 == 0 %>
  <div class="row">
<% end %>
  <div class="span2">
    <a href="<%= photo.image.url(:large) %>" rel="lightbox[]">
      <%= image_tag photo.image.url(:small) %>
    </a>
      <h5>
        <% photo.name.truncate(10) %>
    <% if current_user %>
      <a class="btn pull-right" href="<%= photo.image.url(:original)%>" >
        <i class="icon-download"></i>
      </a>
      <% if can? :destroy, photo %>
        <%= link_to [photo.gallery, photo], :method=>:delete, :class=> 'btn btn-danger pull-right', :confirm => "Opravdu smazat fotografii?" do %>
        <i class="icon-trash"></i>
        <% end %>
      <% end %>
    <% end %>
    </h5>
  </div>
<% if photo_counter % 4 == 3 %>
  </div>
  <br />
<% end %>


