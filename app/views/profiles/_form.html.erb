<%= f.semantic_fields_for :profile do |p| %>
  <%= p.input :first_name %>
  <%= p.input :second_name %>
  <%= p.input :email %>
  <%= p.input :telephone %>
  <%= p.input :im_jabber %>
  <% if can? :update_extended, @user.profile %>
    <%= p.input :birthdate, :as => :date, :start_year => Time.now.year-100 %>
    <%= p.input :birthnumber %>
    <%= p.input :vzs_id %>
    <%= render 'addresses/form', :f => p %>
  <% end %>
<% end %>
