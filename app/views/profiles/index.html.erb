<% title "Profiles" %>

<table>
  <tr>
    <th>First Name</th>
    <th>Second Name</th>
    <th>Street</th>
    <th>House Number</th>
    <th>City</th>
    <th>Postal Code</th>
    <th>Email</th>
    <th>Telephone</th>
    <th>Im Jabber</th>
  </tr>
  <% for profile in @profiles %>
    <tr>
      <td><%= profile.first_name %></td>
      <td><%= profile.second_name %></td>
      <td><%= profile.street %></td>
      <td><%= profile.house_number %></td>
      <td><%= profile.city %></td>
      <td><%= profile.postal_code %></td>
      <td><%= profile.email %></td>
      <td><%= profile.telephone %></td>
      <td><%= profile.im_jabber %></td>
      <td><%= link_to "Show", profile %></td>
      <td><%= link_to "Edit", edit_profile_path(profile) %></td>
      <td><%= link_to "Destroy", profile, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Profile", new_profile_path %></p>
