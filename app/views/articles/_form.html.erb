<%= semantic_form_for @article do |f| %>
	<%= f.semantic_errors %>
    <%= f.inputs do %>
      <%= f.input :user %>
      <%= f.input :title %>
      <%= f.input :content %>
      <%= f.input :commentable %>
      <%= f.input :group, :as => :select, :collection => group_names, :label => 'Skupina', :include_blank => false %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button, :button_html => { :class => 'btn btn-success' } %>
    <% end %>
<% end %>
