<%= semantic_form_for @page do |f| %>
	<%= f.semantic_errors %>
    <%= f.inputs do %>
      <%= f.input :title  %>
      <%= f.input :menu_title  %>
      <%= f.input :content  %>
      <%= f.input :navbar %>
      <%= f.input :menu %>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, :as => :button, :label => t('btn.save'), :button_html => { :class => 'btn btn-success' } %>
    <% end %>
<% end %>
